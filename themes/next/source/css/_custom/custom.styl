*/

.gt-container .gt-no-init {
	padding: 1.25em 0;
	text-align: center;
}

.gt-container .gt-no-init>p {
	text-align: center;
}

.gt-container .gt-meta {
	margin: 0 0;
	padding: 1em 0;
	position: relative;
	border-bottom: 0px solid #e9e9e9;
	font-size: 1em;
	z-index: 0;
}

.gt-container .gt-popup .gt-action.is--active:before {
	content: '';
	width: 0.25em;
	height: 0.25em;
	background: #6190e8;
	position: absolute;
	left: 0.5em;
	top: 1.2375em;
}

.hider_title{
    font-family: "Microsoft Yahei";
    cursor: pointer;
    color: #ef4a05;
}
.close:after{
    content: "▼";
}
.open:after{
    content: "▲";
}